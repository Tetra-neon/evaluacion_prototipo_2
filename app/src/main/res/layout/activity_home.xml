<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_background"
    tools:context=".HomeActivity">

    <!-- AppBar con Material Design -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:elevation="4dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@drawable/bg_header">

            <!-- Título de bienvenida centrado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvBienvenida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_primary"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido scrolleable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Contenedor con ancho máximo para tablets -->
            <LinearLayout
                android:id="@+id/containerButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="600dp">

                <!-- Sección: Perfil -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="4dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <Button
                        android:id="@+id/btnIrPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ver mi Perfil"
                        android:textAlignment="textStart"
                        android:drawableStart="@android:drawable/ic_menu_myplaces"
                        android:drawableTint="?attr/colorPrimary"
                        android:drawablePadding="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sección: Contacto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contáctanos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="4dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@android:drawable/divider_horizontal_bright"
                        android:showDividers="middle">

                        <Button
                            android:id="@+id/btnAbrirWeb"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Nuestro sitio web"
                            android:textAlignment="textStart"
                            android:drawableStart="@android:drawable/ic_menu_search"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <Button
                            android:id="@+id/btnEnviarCorreo"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:drawableStart="@android:drawable/ic_dialog_email"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Enviar correo SOS"
                            android:textAlignment="textStart" />

                        <Button
                            android:id="@+id/btnCompartir"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Ayudanos a difundir"
                            android:textAlignment="textStart"
                            android:drawableStart="@android:drawable/ic_menu_share"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <Button
                            android:id="@+id/btnLlamar"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:drawableStart="@android:drawable/ic_menu_call"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Llamar"
                            android:textAlignment="textStart" />

                        <Button
                            android:id="@+id/btnEnviarSms"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:drawableStart="@android:drawable/ic_dialog_email"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Envianos SMS"
                            android:textAlignment="textStart" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sección: Herramientas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Herramientas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="4dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@android:drawable/divider_horizontal_bright"
                        android:showDividers="middle">

                        <Button
                            android:id="@+id/btnLinterna"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Encender/Apagar Linterna"
                            android:textAlignment="textStart"
                            android:drawableStart="@android:drawable/ic_menu_day"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <Button
                            android:id="@+id/btnCamara"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Activar Cámara"
                            android:textAlignment="textStart"
                            android:drawableStart="@android:drawable/ic_menu_camera"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"/>

                        <Button
                            android:id="@+id/btnAbrirMapa"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Ver mi ubicación"
                            android:textAlignment="textStart"
                            android:drawableStart="@android:drawable/ic_menu_mapmode"
                            android:drawablePadding="12dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:drawableTint="?attr/colorPrimary" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Sección: Cuenta -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuenta"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="4dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:divider="@android:drawable/divider_horizontal_bright"
                        android:showDividers="middle">

                    <Button
                        android:id="@+id/btnAyuda"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ayuda y FAQ"
                        android:drawableStart="@android:drawable/ic_menu_help"
                        android:drawableTint="?attr/colorPrimary"
                        android:drawablePadding="12dp"
                        android:textAlignment="textStart"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                    <Button
                        android:id="@+id/btnConfiguracion"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:drawableStart="@android:drawable/ic_menu_manage"
                        android:drawableTint="?attr/colorPrimary"
                        android:drawablePadding="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Ajustes de la cuenta"
                        android:textAlignment="textStart" />

                    <Button
                        android:id="@+id/btnCerrarSesion"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Cerrar Sesión"
                        android:textAlignment="textStart"
                        android:textColor="#F44336"
                        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
                        android:drawableTint="#F44336"
                        android:drawablePadding="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>