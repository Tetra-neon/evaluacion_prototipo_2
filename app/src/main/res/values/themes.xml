<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- =========================================== -->
    <!-- 1. TEMA PRINCIPAL DE LA APP (BASE PARA AMBOS MODOS) -->
    <!-- =========================================== -->
    <style name="Theme.App" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores Primarios (elementos interactivos principales) -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>

        <!-- Colores Secundarios (elementos flotantes, switches) -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>

        <!-- Colores de Fondo y Superficies -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnBackground">@color/md_theme_onBackground</item>
        <item name="colorOnSurface">@color/md_theme_onSurface</item>

        <!-- Color de la barra de estado (la barra superior con la hora y la batería) -->
        <item name="android:statusBarColor">@color/md_theme_background</item>
    </style>

    <!-- =========================================== -->
    <!-- 2. TEMA DE LA SPLASH SCREEN -->
    <!-- =========================================== -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Fondo de la splash screen -->
        <item name="windowSplashScreenBackground">@color/md_theme_background</item>

        <!-- Icono de la splash screen (lo toma de tu drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/iconopatita</item> <!-- Cambia esto si tienes otro icono -->

        <!-- Tema al que se transiciona después del splash -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

</resources>
