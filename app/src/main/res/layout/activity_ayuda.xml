<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainer"
    tools:context=".AyudaActivity">

    <!-- AppBarLayout para una barra de tÃ­tulo elegante -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar con un botÃ³n de regreso integrado -->
        <com.google.android.material.appbar.MaterialToolbar
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="24dp"
            android:id="@+id/toolbarAyuda"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="ðŸ¾ GuÃ­a y Soporte - SOS Wild" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- El contenido principal irÃ¡ dentro de un NestedScrollView para permitir el scroll bajo la AppBar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- LinearLayout para organizar las "tarjetas" de preguntas verticalmente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:clipToPadding="false">

            <!-- CardView para la Linterna -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_flash_on"
                            app:tint="?attr/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â¿QuÃ© hacer si encuentro un animal en peligro de extinciÃ³n en una zona urbana?"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ‘‰ No lo toques ni te acerques, solo observa desde lejos."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CardView para la CÃ¡mara -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_camera"
                            app:tint="?attr/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â¿CÃ³mo envÃ­o una alerta SOS?"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ“ Presiona â€œVer mi ubicaciÃ³nâ€. Copia las cordenadas y envialas por el medio de contacto de tu preferencia el centro de rescate se pondrÃ¡ en contacto."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CardView para el Perfil -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_person"
                            app:tint="?attr/colorPrimary" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â¿CÃ³mo editar mis datos personales?"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ”§ Ve a â€œMi Perfilâ€. PodrÃ¡s editar tus datos, tu nombre, tu email, tu carnet."
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Separador visual para dividir el FAQ del formulario -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- CardView para el Formulario de Contacto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â¿Necesitas algo mÃ¡s?"
                        android:layout_marginBottom="4dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu mensaje puede salvar una vida ðŸ’š"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp"/>

                    <!-- MenÃº Desplegable (Spinner) usando Material Design -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menuTipoContacto"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Motivo del contacto">
                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            tools:ignore="LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de texto para el mensaje -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilMensaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="Escribe tu mensaje aquÃ­"
                        app:counterEnabled="true"
                        app:counterMaxLength="500">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMensaje"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:minLines="4"
                            android:maxLength="500"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- BotÃ³n de Enviar -->
                    <Button
                        android:id="@+id/btnEnviarFormulario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Enviar Mensaje"
                        app:icon="@drawable/ic_send"
                        app:iconGravity="textStart" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout> <!-- Cierre del LinearLayout principal -->
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
